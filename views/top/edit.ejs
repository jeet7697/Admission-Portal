<%- include('../header.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
</head>
<style>
	.top{
		background-size: cover;
		height: 800px;
		width: 100%;
	}
	.container-fluid{
		background-color: cadetblue;
	}
	
</style>
<body>
	
<div class="container-fluid">
	
	<div class="row">
		
		<div class="col-md-1"></div>
		<div class="col-md-5">
			
			
			<hr class="text-black">
			<br>
           
			<img src="/assets/images/edu1.jpg" class="top">
           
        </div>
		

		<div class="col-md-5 form" style="font-size: 25px;">
			<h3 class="text-center text-dark" style="padding-top: 20px;"><span style="color: blue;"><%=data.course %></span>Registration Form</h3>
			<form action="/course/btechupdate/<%= data._id%>" method="post">
				<div class="mb-3">
				<label>UserName:</label>
				<input type="text" name="username" class="form-control" value="<%=data.username %>">
				</div>

				<div class="mb-3">
				<label>Email:</label>
				<input type="text" name="email" class="form-control"  value="<%=data.email %>">
				
				</div>

				<div class="mb-3">
				<label>Mobile Number:</label>
				<input type="text" name="mobile" class="form-control" placeholder="Enter Mobile Number" value="<%=data.mobile %>">
				</div>

				<div class="mb-3">
					<label>Address:</label>
					<br>
					<textarea class="form-control" name="address"><%=data.address %></textarea>
				</div>

				<div class="mb-3">
				<label>Gender:</label><br>
				<input type="radio" name="gender" value="male" <%=data.gender=='male' ? 'checked' : '' %> >Male<br>
				<input type="radio" name="gender" value="female"  <%=data.gender=='female' ? 'checked' : '' %>
				>FeMale
				</div>
				
				<div class="mb-3">
				<label>College</label>
				<br>
				<select name="college" class="form-control">
					<option>Select college</option>
					<option  <%=data.college=='RGIT' ? 'selected' : '' %>>RGIT</option>
					
				    <option <%=data.college=='MPCT' ? 'selected' : '' %>>MPCT</option>
					<option <%=data.college=='MITS' ? 'selected' : '' %>>MITS</option>
					<option <%=data.college=='ITM' ? 'selected' : '' %>>ITM</option>
					<option <%=data.college=='OTHERS' ? 'selected' : '' %>>OTHERS</option>
				</select>
				</div>

				<div class="mb-3">
				<label>Course</label>
				<br>
				<select name="course" class="form-control">
					<option>Select</option>
					<option value="<%=data.course %>" > <%=data.course %> </option>
				</select>
				</div>	

				<div class="mb-3">
				<label>Branch</label>
				<br>
				<select name="branch" class="form-control">
					<option>Select</option>
					<option  <%=data.branch=='C.S.E' ? 'selected' : '' %> >C.S.E</option>
					<option <%=data.branch=='I.T' ? 'selected' : '' %> >I.T</option>
					<option <%=data.branch=='E.E' ? 'selected' : '' %> >E.E</option>
					<option <%=data.branch=='E.C' ? 'selected' : '' %> >E.C</option>
					<option <%=data.branch=='MECH.' ? 'selected' : '' %> >MECH.</option>
					<option <%=data.branch=='CIVIL' ? 'selected' : '' %> >CIVIL</option>
					<option <%=data.branch=='AUTOMOBILE' ? 'selected' : '' %> >AUTOMOBILE</option>
					<option <%=data.branch=='OTHERS' ? 'selected' : '' %> >OTHERS</option>
				</select>
				</div>
				
                <button type="submit" class="btn btn-info" style="font-size: 25px;">Update</button>	
				
		</form>
		<br>

		</div>
		
	</div>
</div>

<div class="col-md-1"></div>
<%- include('../footer.ejs') %>

	
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</html>


