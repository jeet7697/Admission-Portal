<%- include('../header.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <br /><br /><br /><br />

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h3 class="alert alert-warning text-center">DISPLAY</h3>
      
      <table class="table table-striped  table-responsive table-dark">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">id</th>
            <th scope="col">Username</th>
            <th scope="col">Course</th>
            <th scope="col">Action</th>
          </tr>
        </thead>

        <tbody>
          <% var i=1 %>
          <% data.forEach((item)=>{ %>
                        <!-- console.log(item) -->
           

          <tr>
            <td><%= i++ %></td>
            <td><%= item._id %></td>
            <td><%= item.username %></td>
            <td><%= item.course %></td>

            <td>
              <a href="/course/view/<%= item._id %>" class="btn btn-info">View</a>
              <a href="/course/edit/<%= item._id %>" class="btn btn-info">Edit</a>
            </td>
          </tr>
          
        </tbody>
        <% }) %>
      </table>
      <center>
        <a href="/dashboard" class="btn btn-warning text-center">Back To The Dashboard</a>
      </center>
      <br />
    </div>
  </div>
</div>
<%- include('../footer.ejs') %>
</body>
